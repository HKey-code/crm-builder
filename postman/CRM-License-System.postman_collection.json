    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://new-smart-crm-backend-dev-bacrgwh7egdfavfv.centralus-01.azurewebsites.net",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your-auth-token-here",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "test-user-id",
      "type": "string"
    },
    {
      "key": "tenantId",
      "value": "test-tenant-id",
      "type": "string"
    },
    {
      "key": "licenseType",
      "value": "SMART_SERVICE",
      "type": "string"
