          "name": "Assign License",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"tenantId\": \"{{tenantId}}\",\n  \"licenseType\": \"{{licenseType}}\",\n  \"roleId\": \"role-id-here\",\n  \"expiresAt\": \"2025-12-31T23:59:59Z\",\n  \"notes\": \"License assignment via API\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/licenses/assign",
              "host": ["{{baseUrl}}"],
              "path": ["licenses", "assign"]
            }
          }
        },
